<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <nav class="navegador">
            <section class="contenedor-navegar navegar">
                <div class="logo-navegar">
                    <img src="~/Content/img/pape.png">
                </div>
                <div class="links-navegar">

                    <div class="navegar-a">
                        <div class="div-a">
                            @Html.ActionLink("Inicio", "Index", "Home")
                        </div>
                        <ul class="ul-li">
                            <li><a>Crear</a></li>
                            <li><a>Editar</a></li>
                        </ul>
                    </div>
                    <div class="navegar-a">
                        <div class="div-a">
                            @Html.ActionLink("Usuarios", "Index", "Home")
                        </div>
                        <ul class="ul-li">
                            <li><a>Crear</a></li>
                            <li><a>Editar</a></li>
                        </ul>
                    </div>
                    <div class="navegar-a">
                        <div class="div-a">
                            @Html.ActionLink("Almacen", "About", "Home")
                        </div>
                        <ul class="ul-li">
                            <li><a>Crear</a></li>
                            <li><a>Editar</a></li>
                        </ul>
                    </div>
                    <div class="navegar-a">
                        <div class="div-a">
                            @Html.ActionLink("Paqueteria", "Contact", "Home")
                        </div>
                        <ul class="ul-li">
                            <li><a>Crear</a></li>
                            <li><a>Editar</a></li>
                        </ul>
                    </div>
                </div>
                <div class="img-navegar">
                    <div class="navegar-i">
                        <div class="div-i">
                            <i class="fas fa-user"></i>
                        </div>
                        <ul class="ul-li">
                            <li>@Html.Partial("_LoginPartial1")</li>
                        </ul>
                    </div>
                </div>
            </section>
        </nav>
    </header>
    @RenderBody()
    <div class="container body-content">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
