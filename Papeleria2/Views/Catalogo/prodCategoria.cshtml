@using Papeleria2.Models
@{
    ViewBag.Title = "prodCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="contenedor-general">
    <div class="contenido-cuerpo">
        <h2>@ViewBag.Catego</h2>


        <div class="row">
            @foreach (Productos item in ViewBag.productos)
            {
                <div class="col-xs-12 col-md-3">
                    <div class="thumbnail">
                        <img class="img-responsive" src="~/Content/img/Productos/@item.imagen" />
                        <div class="captin text-center">
                            <p>
                                <b>Nombre:</b> <span>@item.nombre</span>
                            </p>
                            <p>
                                <b>Precio:</b> <span>@item.precio</span>
                            </p>
                            <p class="text-center">
                                @Html.ActionLink("Añadir al carrito", "Agregar", "Carro", new { id = item.id }, new { @class = "btn btn-info" })
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>