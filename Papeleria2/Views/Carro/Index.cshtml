@using Papeleria2.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <section class="contenedor-tabla">
        <div class="contenido-tabla">
            <h2>Carrito</h2>

            <h3>Lista de productos</h3>
            <table class="tabla">
                <thead>
                    <tr>
                        <th>Opción</th>
                        <th>Nombre</th>
                        <th>Foto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Item item in (List<Item>)Session["cart"])
                    {
                        <tr>
                            <td><a href="@Url.Action("Quitar", "Carro", new { id = item.Producto.id })">Quitar</a></td>
                            <td>@item.Producto.nombre</td>
                            <td><img class="img-responsive" src="~/Content/img/Productos/@item.Producto.imagen" /></td>
                            <td>@item.Producto.precio</td>
                            <td>@item.Cantidad</td>
                            <td>@(item.Producto.precio * item.Cantidad)</td>
                            <td></td>
                        </tr>
                    }
                        <tr>
                            <td align="right" colspan="6">Total</td>
                            <td>
                                @{
                                    List<Item> cart = (List<Item>)Session["cart"];
                                    var total = cart.Sum(item => item.Producto.precio * item.Cantidad);
                            }@total
                        </td>
                    </tr>
                </tbody>
            </table>
            <br />
            <a class="boton" href="@Url.Action("Index","Home")">Continuar</a>
            <p>
                @Html.ActionLink("Confirmar Orden", "CrearOrden", "Pago", new { area = "" }, new { @class = "boton" })
            </p>
        </div>
    </section>
</body>
</html>

