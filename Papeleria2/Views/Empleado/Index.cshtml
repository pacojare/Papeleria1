@model IEnumerable<Papeleria2.Models.Empleados>

@{
    ViewBag.Title = "Index";
}
<section class="contenedor-general">
    <div class="contenido-cuerpo">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Crear Nuevo", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.contrasenia)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.departamento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.contrasenia)
    </td>
    <td class="contenido-td">
        @Html.ActionLink("Edit", "Edit", new { id = item.id })
        @Html.ActionLink("Details", "Details", new { id = item.id })
        @Html.ActionLink("Delete", "Delete", new { id = item.id })
    </td>
</tr>
}

        </table>
    </div>
</section>